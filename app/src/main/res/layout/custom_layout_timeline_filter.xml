<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="end"
    android:layout_marginTop="35dp"
    android:layout_marginBottom="150dp"
    android:visibility="gone">

    <!-- INFO: 3/25/19    marginEnd: 24dp = 16 (toolbar padding) + 24 (half filter icon) - 10 (half triangle size) -->
    <ImageView
        android:id="@+id/channels_triangle"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentEnd="true"
        android:layout_gravity="end"
        android:layout_marginEnd="22dp"
        android:src="@drawable/shape_triangle_filter"
        android:elevation="2dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/channels_triangle"
        android:layout_marginStart="@dimen/activity_margin"
        android:layout_marginEnd="@dimen/activity_margin"
        android:layout_marginBottom="5dp"
        android:paddingBottom="@dimen/activity_margin_lg"
        android:layout_alignParentStart="true"
        android:background="@drawable/shape_rectangle_rounded_white_md_a95"
        android:elevation="2dp">

        <Button
            android:id="@+id/filter_apply_btn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="@dimen/activity_margin_lg"
            android:layout_marginEnd="@dimen/activity_margin_lg"
            android:layout_marginTop="@dimen/activity_margin_lg"
            android:layout_alignParentBottom="true"
            android:text="@string/action_apply"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textAllCaps="false"
            android:background="@drawable/selector_cpost_send"
            android:fontFamily="@font/raleway"
            android:includeFontPadding="false"/>

        <ScrollView
            android:id="@+id/filters_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/filter_apply_btn"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/filter_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginBottom="3dp"
                    android:text="@string/tl_filter_title"
                    android:textColor="@color/black_87"
                    android:textSize="18sp"
                    android:textAllCaps="false"
                    android:fontFamily="@font/raleway"
                    android:includeFontPadding="false"/>

                <LinearLayout
                    android:id="@+id/filters_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"/>

                <LinearLayout
                    android:id="@+id/sort_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_margin_lg"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/sort_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginBottom="3dp"
                        android:text="@string/tl_sort_title"
                        android:textColor="@color/black_87"
                        android:textSize="18sp"
                        android:textAllCaps="false"
                        android:fontFamily="@font/raleway"
                        android:includeFontPadding="false"/>

                    <include layout="@layout/layout_custom_checkbox_dark_filter"
                        android:id="@+id/sort_date"/>

                    <include layout="@layout/layout_custom_checkbox_dark_filter"
                        android:id="@+id/sort_loved"/>

                    <include layout="@layout/layout_custom_checkbox_dark_filter"
                        android:id="@+id/sort_shuffle"/>

                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</RelativeLayout>