<androidx.cardview.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="8dp"
    card_view:cardPreventCornerOverlap="false">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/lower_section"
            layout="@layout/interest_basic_info_layout_round"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/wall_image"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/background_rounded_2_top"
            android:scaleType="centerCrop"
            card_view:layout_constraintBottom_toTopOf="@+id/lower_section"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent" />

        <include
            android:id="@+id/interest_profile_picture"
            layout="@layout/custom_layout_profile_picture"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            card_view:layout_constraintBottom_toBottomOf="@id/wall_image"
            card_view:layout_constraintEnd_toEndOf="@+id/wall_image"
            card_view:layout_constraintHeight_percent=".3"
            card_view:layout_constraintHorizontal_bias="0.5"
            card_view:layout_constraintStart_toStartOf="@+id/wall_image"
            card_view:layout_constraintTop_toTopOf="@+id/wall_image"
            card_view:layout_constraintVertical_chainStyle="packed" />

        <TextView
            android:id="@+id/claim_status"
            style="@style/TextWithShadow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/interest_profile_picture"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/raleway_bold"
            android:maxLines="2"
            android:paddingStart="20dp"
            android:paddingTop="10dp"
            android:paddingEnd="20dp"
            android:paddingBottom="10dp"
            android:text="@string/interest_claim_pending"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/colorAccent"
            android:textSize="16sp"
            android:visibility="gone"
            card_view:layout_constraintBottom_toBottomOf="@+id/wall_image"
            card_view:layout_constraintEnd_toEndOf="@+id/wall_image"
            card_view:layout_constraintHorizontal_bias="0.5"
            card_view:layout_constraintStart_toStartOf="@+id/wall_image"
            card_view:layout_constraintTop_toBottomOf="@id/interest_profile_picture"/>

        <TextView
            android:id="@+id/follow_unfollow_btn"
            style="@style/TextWithShadow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|end"
            android:fontFamily="@font/raleway_bold"
            android:includeFontPadding="false"
            android:padding="12dp"
            android:textColor="@color/white"
            android:textSize="18sp"
            card_view:layout_constraintEnd_toEndOf="@+id/wall_image"
            card_view:layout_constraintTop_toTopOf="@+id/wall_image"
            tools:text="Follow" />

