<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="false"
    tools:context=".activities_and_fragments.activities_user_guide.UserGuideActivity"
    android:background="@color/colorAccent">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <View
        android:id="@+id/btnsBackground"
        android:layout_width="0dp"
        android:layout_height="?android:actionBarSize"
        android:background="@color/divider_on_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/btnBack"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center_vertical|start"
        android:background="@drawable/selector_guide_button"
        android:paddingStart="@dimen/activity_margin_lg"
        android:paddingEnd="0dp"
        android:textSize="18sp"
        android:includeFontPadding="false"
        android:textColor="@color/colorAccent"
        android:text="@string/action_back"
        android:gravity="center_vertical"
        android:textAlignment="gravity"
        android:drawableStart="@drawable/ic_signup_left_indicator"
        android:drawablePadding="5dp"
        android:drawableTint="@color/colorAccent"
        android:fontFamily="@font/raleway_semibold"
        app:layout_constraintWidth_percent=".5"
        app:layout_constraintTop_toTopOf="@id/btnsBackground"
        app:layout_constraintBottom_toBottomOf="@id/btnsBackground"
        app:layout_constraintStart_toStartOf="@id/btnsBackground"
        />

    <TextView
        android:id="@+id/btnNext"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center_vertical|end"
        android:background="@drawable/selector_guide_button"
        android:paddingEnd="@dimen/activity_margin_lg"
        android:paddingStart="0dp"
        android:textSize="18sp"
        android:includeFontPadding="false"
        android:gravity="center_vertical|end"
        android:textColor="@color/state_list_guide_button"
        android:text="@string/action_next"
        android:fontFamily="@font/raleway_semibold"
        android:drawableEnd="@drawable/ic_signup_right_indicator"
        android:drawablePadding="5dp"
        android:drawableTint="@color/colorAccent"
        app:layout_constraintWidth_percent=".5"
        app:layout_constraintTop_toTopOf="@id/btnsBackground"
        app:layout_constraintBottom_toBottomOf="@id/btnsBackground"
        app:layout_constraintEnd_toEndOf="@id/btnsBackground"
        />

</androidx.constraintlayout.widget.ConstraintLayout>