<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:gravity="center"
    android:orientation="vertical">

    <View
        android:id="@+id/viewMore"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="@dimen/activity_margin_md"
        android:background="@drawable/gradient_search_round"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:layout_below="@id/single_picture_container"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/raleway_semibold"
        android:lines="2"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:includeFontPadding="false"
        android:text="@string/view_more_plain"
        app:layout_constraintEnd_toEndOf="@id/viewMore"
        app:layout_constraintStart_toStartOf="@id/viewMore"
        app:layout_constraintTop_toTopOf="@id/viewMore"
        app:layout_constraintBottom_toBottomOf="@id/viewMore" />

</androidx.constraintlayout.widget.ConstraintLayout>