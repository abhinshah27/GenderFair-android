<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:fitsSystemWindows">true</item>

        <!-- enable window content transitions -->
        <item name="android:windowActivityTransitions">true</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/colorAccent</item>"
    </style>

    <style name="ViewersTheme" parent="AppTheme"/>


    <style name="OnBoardingCheckbox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:fontFamily">@font/raleway_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">top</item>
        <item name="android:buttonTint">@color/white</item>
        <item name="android:paddingStart">@dimen/activity_margin</item>
        <item name="android:layout_marginTop">@dimen/activity_margin_lg</item>
        <item name="android:layout_marginBottom">@dimen/activity_margin_lg</item>
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:layout_marginEnd">30dp</item>
    </style>

</resources>